<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs', {title: "Blog Detail"}) %>
</head>
<body>
    <!-- Navbar -->
    <%- include('../partials/navbar') %>

    <div class="container mt-3">
        <div class="row">
            <!-- Categories -->
            <div class="col-md-3">
                <%- include('../partials/detailSidebar') %>
            </div>

            <!-- Post Cards -->
            <div class="col-md-9">
                <div class="card">
                    <% data.blogs.forEach(blog => { %>
                        <% if (parseInt(blogid) === blog.blogid) { %>
                            <img src="/img/<%= blog.img %>" class="img-fluid w-50 h-50 align-self-center mt-1" alt="card photo">
                            <div class="card-body">
                                <h1 class="card-title text-danger-emphasis text-center h1">
                                    <%= blog.title %>
                                </h1>
                                <p class="card-text px-3">
                                    <%= blog.desc %>
                                </p>
                            </div>
                         
                        <% } %>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>